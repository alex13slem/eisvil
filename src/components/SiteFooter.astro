---
import type { HTMLAttributes } from "astro/types";
import SiteLogo from "./SiteLogo.astro";
import appleSVG from "@/img/apple.svg";
import googleSVG from "@/img/google.svg";
import huaveiSVG from "@/img/huawei.svg";
import nintendoSVG from "@/img/nintendo.svg";
import playgameSVG from "@/img/playgame.svg";
import russtoreSVG from "@/img/russtore.svg";
import sonySVG from "@/img/sony.svg";
import steamSVG from "@/img/steam.svg";
import vkSVG from "@/img/vk.svg";
import xBoxSVG from "@/img/x-box.svg";
import supportSVG from "@/img/support.svg";
import { Image } from "astro:assets";

interface Props extends HTMLAttributes<"footer"> {}

const { class: className, ...props } = Astro.props;
---

<footer class:list={["footer", className]} {...props}>
  <div class="container">
    <div class="inner">
      <div class="left-panel">
        <SiteLogo />

        <p class="info">
          Lorem ipsum dolor sit amet consectetur, adipisicing elit.
        </p>
      </div>
      <div class="center-panel">
        <nav class="navigation">
          <div class="col">
            <a class="nav-link" href="">Наши игры</a>
            <a class="nav-link" href="">Услуги</a>
            <a class="nav-link" href="">Издательство</a>
            <a class="nav-link" href="">Карьера</a>
          </div>
          <div class="col">
            <a class="nav-link" href="">Пользовательское соглашение</a>
            <a class="nav-link" href="">Политика конфиденциальности</a>
          </div>
          <div class="col">
            <a class="nav-link" href="">Для прессы</a>
            <a class="nav-link" href="">Контакты</a>
          </div>
        </nav>
        <p class="all-rights"><span>Esvil</span>. 2023. Все права защищены</p>
      </div>
      <div class="right-panel">
        <div class="platforms">
          <h2>Мы на платформах</h2>
          <div class="links">
            <a href="" class="link"><Image src={appleSVG} alt={""} /></a>
            <a href="" class="link"><Image src={googleSVG} alt={""} /></a>
            <a href="" class="link"><Image src={russtoreSVG} alt={""} /></a>
            <a href="" class="link"><Image src={huaveiSVG} alt={""} /></a>
            <a href="" class="link"><Image src={playgameSVG} alt={""} /></a>
            <a href="" class="link"><Image src={vkSVG} alt={""} /></a>
            <a href="" class="link"><Image src={steamSVG} alt={""} /></a>
            <a href="" class="link"><Image src={nintendoSVG} alt={""} /></a>
            <a href="" class="link"><Image src={xBoxSVG} alt={""} /></a>
            <a href="" class="link"><Image src={sonySVG} alt={""} /></a>
          </div>
        </div>
        <div class="bottom-block">
          <Image src={supportSVG} alt={""} />
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
  }
  .inner {
    min-height: 242px;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    padding-block: 2rem;

    border-top: var(--border);
  }

  .left-panel {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
    padding-right: 1ch;
  }
  .info {
    margin: 0;
    font-size: 10px;
  }

  .center-panel {
    padding-inline: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
    border-inline: var(--border);
  }
  .all-rights {
    margin: 0;
    font-size: 10px;
    font-weight: 700;
    text-align: center;
  }
  .all-rights span {
    text-decoration: underline;
    color: rgb(var(--color-accent));
  }

  .navigation {
    display: flex;
    gap: 2rem;
  }
  .navigation .col {
    width: 190px;

    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .nav-link {
    color: rgb(var(--color-text), 30%);
    font-weight: 300;
  }

  .right-panel {
    padding-left: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
  }
  .platforms {
  }
  .platforms h2 {
    margin-bottom: 1em;
    font-size: 20px;
    font-weight: 600;
  }
  .platforms .links {
    display: grid;
    grid-template-columns: repeat(5, auto);
    justify-content: start;
    gap: 10px 5px;
  }
  .link path {
    /* fill: bisque; */
  }
</style>

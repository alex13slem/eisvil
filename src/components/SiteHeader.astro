---
import SiteNav from "./SiteNav.astro";
import HeaderSidePanel from "./HeaderSidePanel.astro";
import SiteLogo from "./SiteLogo.astro";
---

<header class="header">
  <div class="container">
    <HeaderSidePanel class="left-panel">
      <SiteLogo />
    </HeaderSidePanel>
    <SiteNav />
    <HeaderSidePanel class="right-panel">
      <!-- <Image class="site-logo" src={siteLogo} alt="site-logo" /> -->
    </HeaderSidePanel>
  </div>
</header>

<style>
  .header {
    z-index: 1;
    position: fixed;
    overflow: hidden;

    padding-bottom: 2px;

    background: rgb(var(--color-bg), 50%);
    backdrop-filter: blur(10px);

    top: 0;
    width: 100%;

    border-bottom: 1px solid transparent;
    border-image: linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.04) 15.71%,
        rgba(255, 255, 255, 0.24) 30.52%,
        rgba(255, 255, 255, 0.36) 50.14%,
        rgba(255, 255, 255, 0.24) 69.29%,
        rgba(255, 255, 255, 0.04) 87.86%
      )
      1;
  }

  .container {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: end;
    gap: 5px;
  }

  .right-panel {
    justify-content: end;
  }

  .left-panel::after {
    right: -60px;
  }
  .right-panel::after {
    left: -60px;
  }

  .site-logo {
    box-sizing: content-box;
    padding-block: 0.5rem;
  }
</style>

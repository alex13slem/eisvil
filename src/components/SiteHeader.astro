---
import {Image} from 'astro:assets';
import siteLogo from '@/img/site-logo.svg';
import SiteNav from '@/components/SiteNav.astro';
---

<header class="root variant-blur">
  <div class="container">
    <div class="left-panel">
      <a href=""><Image class="site-logo" src={siteLogo} alt="site-logo" /></a>
    </div>
    <SiteNav />
    <div class="right-panel">
      <!-- <Image class="site-logo" src={siteLogo} alt="site-logo" /> -->
    </div>
  </div>
</header>

<style>
  .root {
    z-index: 1;
    overflow: hidden;
    padding-bottom: 2px;

    top: 0;
    width: 100%;

    border-bottom: 1px solid transparent;
    border-image: linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.04) 15.71%,
        rgba(255, 255, 255, 0.24) 30.52%,
        rgba(255, 255, 255, 0.36) 50.14%,
        rgba(255, 255, 255, 0.24) 69.29%,
        rgba(255, 255, 255, 0.04) 87.86%
      )
      1;
  }

  .root.variant-blur {
    position: fixed;
    background: rgb(var(--color-bg), 50%);
    backdrop-filter: blur(10px);
  }
  .root.variant-oval {
    position: sticky;
    background: rgb(var(--color-bg));
  }
  .container {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: end;
    gap: 5px;
  }

  .left-panel {
  }
  .right-panel {
    justify-content: end;
  }
  .root.variant-oval .left-panel,
  .root.variant-oval .right-panel {
    box-shadow: inset 0 0 0 2px rgb(var(--color-bg));
  }

  .left-panel,
  .right-panel {
    display: flex;
    position: relative;
    overflow: hidden;
    height: 100%;
  }

  .root.variant-blur .left-panel::after,
  .root.variant-blur .right-panel::after {
    position: absolute;

    bottom: -50%;
    height: 100%;
    content: '';
    background: radial-gradient(50% 50%, rgba(239, 129, 27, 0.25), transparent);
    aspect-ratio: 2/1;
  }
  .root.variant-blur .left-panel::after {
    right: -60px;
  }
  .root.variant-blur .right-panel::after {
    left: -60px;
  }

  .site-logo {
    box-sizing: content-box;
    padding-block: 0.5rem;
    height: 43px;
  }
</style>

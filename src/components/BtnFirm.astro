---
const {class: className, ...props} = Astro.props;
---

<button class:list={['root', className]} {...props}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="9"
    height="9"
    viewBox="0 0 9 9"
    fill="none"
    class="arrow arrow-left"
  >
    <mask id="path-1-inside-1_8_340" fill="white">
      <path d="M9 1.24834e-07L-7.94258e-07 9.11639e-07L-7.45308e-09 9"></path>
    </mask>
    <path
      d="M-7.94258e-07 9.11639e-07L-8.81681e-07 -0.999999L-1 -0.999999L-1 9.99061e-07L-7.94258e-07 9.11639e-07ZM9 -1L-8.81681e-07 -0.999999L-7.06835e-07 1L9 1L9 -1ZM-1 9.99061e-07L-1 9L1 9L0.999999 8.24216e-07L-1 9.99061e-07Z"
      fill="white"
      mask="url(#path-1-inside-1_8_340)"></path>
  </svg>

  <span class="bg"></span>

  <span class="text"><slot /></span>

  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="9"
    height="9"
    viewBox="0 0 9 9"
    fill="none"
    class="arrow arrow-right"
  >
    <mask id="path-1-inside-1_8_340" fill="white">
      <path d="M9 1.24834e-07L-7.94258e-07 9.11639e-07L-7.45308e-09 9"></path>
    </mask>
    <path
      d="M-7.94258e-07 9.11639e-07L-8.81681e-07 -0.999999L-1 -0.999999L-1 9.99061e-07L-7.94258e-07 9.11639e-07ZM9 -1L-8.81681e-07 -0.999999L-7.06835e-07 1L9 1L9 -1ZM-1 9.99061e-07L-1 9L1 9L0.999999 8.24216e-07L-1 9.99061e-07Z"
      fill="white"
      mask="url(#path-1-inside-1_8_340)"></path>
  </svg>
</button>

<style>
  .root {
    padding: 0 4ch;
    line-height: 3;

    border: none;
    background: transparent;
    cursor: pointer;

    transition: transform var(--trans-default);
  }

  .arrow {
    position: absolute;
    content: '';
  }
  .arrow-left {
    top: 0;
    left: 0;
  }
  .arrow-right {
    bottom: 0;
    right: 0;
    transform: rotate(180deg);
  }

  span.bg {
    position: absolute;
    inset: 0;

    background: var(--gradient);
    clip-path: polygon(12% 0%, 100% 0, 100% 50%, 88% 100%, 0% 100%, 0 50%);
  }

  .root:hover {
    transform: scale(101%);
  }
  span.text {
    position: relative;

    font-size: 14px;
    font-weight: 900;
    color: rgb(var(--color-text));
    text-transform: uppercase;
  }
</style>

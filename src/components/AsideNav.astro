---
import GalleryNavPart from "./GalleryNavPart.svelte";
import type { InferGetStaticParamsType } from "astro";
import type { getStaticPaths } from "../pages/gallery/[category]/[lang]/[slug].astro";
type Params = InferGetStaticParamsType<typeof getStaticPaths>;
const { category, slug } = Astro.params as Params;
---

<aside>
  <nav>
    <GalleryNavPart
      path={{ category, slug }}
      collection="services"
      title="Услуги"
      client:visible
    />
  </nav>
</aside>

<style>
  aside {
    flex: 0 0 calc(var(--left-panel-w) + 2px);
    border-right: var(--border-card);
  }

  nav {
    position: sticky;
    top: 60px;
    display: flex;
    flex-direction: column;
  }
</style>

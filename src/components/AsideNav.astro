---
import type { HTMLAttributes } from "astro/types";
import AsideNavLink from "./AsideNavLink.svelte";

interface Props extends HTMLAttributes<"aside"> {
  links: { href: string; text: string }[];
}

const { links } = Astro.props;
---

<aside>
  <nav>
    {
      links.map(({ text, href }) => (
        <AsideNavLink
          isActive={Astro.url.pathname.includes(String(href))}
          href={href}
        >
          {text}
        </AsideNavLink>
      ))
    }
  </nav>
</aside>

<style lang="scss">
  aside {
    flex: 0 0 calc(var(--left-panel-w) + 2px);
    border-right: 1px solid rgb(var(--color-card-border));
  }

  nav {
    position: sticky;
    top: 60px;
    display: flex;
    flex-direction: column;
  }
</style>

---
import type { HTMLAttributes } from "astro/types";
import { Image } from "astro:assets";
import siteLogo from "@/img/site-logo.svg";
import SVGSiteLogo from "./svg/SVGSiteLogo.astro";

interface Props extends HTMLAttributes<"a"> {}

const { class: className, ...props } = Astro.props;
---

<a href="/" class:list={["site-logo", className]} {...props}
  ><SVGSiteLogo class={"svg"} /></a
>

<style>
  .site-logo {
    padding-inline: 1rem;
    color: rgb(var(--color-white));
    transition: filter var(--trans-default);
  }
  .site-logo:hover {
    filter: drop-shadow(0px 0px 0.5rem rgb(var(--color-accent)));
  }
  .svg {
    height: 43px;
  }
</style>

---
import { Image } from "astro:assets";
import banner from "@/img/hero.jpg";
import SVGHeroText from "@/components/svg/SVGHeroText.svelte";
---

<div class="sect-hero">
  <Image class="banner" src={banner} alt="Site-banner" />
  <SVGHeroText />
  <h1><span hidden>Eisvil -</span> место, где идея становится игрой</h1>
  <slot />
</div>

<style lang="scss">
  .sect-hero {
    /* --banner-height: 760px; */
    z-index: 0;
    height: 80vh;
    margin-top: -60px;
    position: relative;

    padding-block: 80px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    gap: 1rem;

    &::after {
      z-index: -1;
      position: absolute;
      content: "";
      inset: -1px;
      background: linear-gradient(
        180deg,
        rgba(28, 29, 43, 0) 50%,
        rgba(28, 29, 43, 0.31) 80%,
        #1c1d2b 100%
      );
    }
  }

  .banner {
    height: 100%;
    width: 100%;
    z-index: -1;
    position: absolute;
    inset: 0;
    object-fit: cover;
    object-position: calc(50% - 40px) 50%;
    /* margin-inline: auto; */
  }


---
import AsideNav from "../components/AsideNav.astro";
import HtmlBase from "./HtmlBase.astro";

const { title, description, category, links } = Astro.props;
---

<HtmlBase title={title} description={description}>
  <div class="container">
    <AsideNav category={category} links={links} />
    <main>
      <slot />
    </main>
  </div>
</HtmlBase>

<style>
  .container {
    display: flex;
  }
  main {
    padding: 2rem;
    padding-right: 0;
    display: flex;
    flex-direction: column;
    gap: 4rem;
    min-height: calc(100vh - 60px);
  }
</style>

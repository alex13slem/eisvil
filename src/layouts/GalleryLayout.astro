---
import GalleryNav from "../components/GalleryNav.astro";
import HtmlBase from "../layouts/HtmlBase.astro";
---

<HtmlBase title="E I S V I L | Галлерея">
  <GalleryNav />
  <slot />
</HtmlBase>

<style>
  :global(body) {
    display: grid;
    grid-template-areas:
      "header header"
      "aside main"
      "footer footer";
    grid-template-rows: auto calc(100vh - 60px) auto;
    grid-template-columns: 370px 1fr;
  }
  main {
    grid-area: main;
    display: flex;
    flex-direction: column;
    min-height: calc(100vh - 60px);
  }
</style>

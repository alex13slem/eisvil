---
import { ViewTransitions } from "astro:transitions";
import SiteHeader from "../components/Header.astro";
import "@/styles/index.scss";
import SiteFooter from "../components/Footer.astro";
import MobileMenu from "../components/MobileMenu.svelte";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Eisvil - это люди объединенные общей целью и желанием создавать игры!",
} = Astro.props;
---

<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon-src.svg" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <SiteHeader />
    <slot />
    <SiteFooter />

    <MobileMenu client:load url={Astro.url} />

    <script>
      import { register } from "swiper/element/bundle";
      register();
    </script>
  </body>
</html>

---
import {Image} from 'astro:assets';
import banner from '@/img/hero.jpg';
import BtnFirm from '../components/BtnFirm.astro';
---

<div class="root">
  <Image class="banner" src={banner} alt="Site-banner" />
  <div class="content">
    <h1>EISVIL</h1>
    <h2 class="description">место, где идея становится игрой</h2>
    <BtnFirm class="button">Создать новый мир</BtnFirm>
  </div>
</div>

<style>
  .root {
    --banner-height: 760px;

    position: relative;
  }

  .banner {
    object-fit: cover;
    object-position: calc(50% - 40px) 50%;
    margin-inline: auto;
  }

  .content {
    margin-top: 415px;
    position: absolute;
    inset: 0;

    display: flex;
    flex-direction: column;
  }

  h1 {
    /* box-sizing: content-box; */
    text-align: center;
    font-size: 125px;
    /* line-height: 0.75em; */
    line-height: 1em;
    letter-spacing: 0.25ch;
    -webkit-text-stroke: 2px rgba(255, 255, 255, 0.75);
    color: rgba(234, 88, 30, 0);

    border-block: 1px solid transparent;
    border-image: linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.04) 15.71%,
        rgba(255, 255, 255, 0.24) 30.52%,
        rgba(255, 255, 255, 0.36) 50.14%,
        rgba(255, 255, 255, 0.24) 69.29%,
        rgba(255, 255, 255, 0.04) 87.86%
      )
      1;

    /* stroke-width: 2px;
    stroke: rgba(35, 12, 12, 0.6); */

    /* filter: drop-shadow(0px -8px 40px rgba(2, 10, 17, 0.85))
      drop-shadow(0px -8px 40px rgba(2, 10, 17, 0.6))
      drop-shadow(-3px 3px 2px rgba(238, 119, 28, 0.1));*/
    backdrop-filter: blur(10px);
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
  }

  .description {
    margin-top: 1rem;
    text-align: center;
    font-size: 1.5rem;
    font-weight: 400;
  }

  .button {
    align-self: center;
    margin-inline: auto;
  }
</style>

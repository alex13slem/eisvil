---
import { Image } from "astro:assets";
import banner from "@/img/hero.jpg";
import SVGHeroText from "../components/svg/SVGHeroText.svelte";
import ModalForm from "../components/ModalForm.svelte";
---

<div class="sect-hero">
  <Image class="banner" src={banner} alt="Site-banner" />
  <div class="content">
    <!-- <h1>EISVIL</h1> -->
    <SVGHeroText />
    <h2 class="description">место, где идея становится игрой</h2>
    <ModalForm client:load />
  </div>
</div>

<style style="scss">
  .sect-hero {
    --banner-height: 760px;

    position: relative;

    &::after {
      position: absolute;
      content: "";
      inset: 0;
      background: linear-gradient(
        180deg,
        rgba(28, 29, 43, 0) 50%,
        rgba(28, 29, 43, 0.31) 80%,
        #1c1d2b 100%
      );
    }
  }

  .banner {
    object-fit: cover;
    object-position: calc(50% - 40px) 50%;
    margin-inline: auto;
  }

  .content {
    z-index: 1;
    margin-top: 410px;
    position: absolute;
    inset: 0;

    display: flex;
    flex-direction: column;
  }

  h1 {
    user-select: none;
    text-align: center;
    font-size: 125px;
    line-height: 1em;
    letter-spacing: 0.25ch;
    -webkit-text-stroke: 2px rgba(255, 255, 255, 0.75);
    color: rgba(234, 88, 30, 0);

    border-block: 1px solid transparent;
    border-image: linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.04) 15.71%,
        rgba(255, 255, 255, 0.24) 30.52%,
        rgba(255, 255, 255, 0.36) 50.14%,
        rgba(255, 255, 255, 0.24) 69.29%,
        rgba(255, 255, 255, 0.04) 87.86%
      )
      1;

    backdrop-filter: blur(10px);
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
  }

  .description {
    user-select: none;
    margin-top: 1rem;
    text-align: center;
    font-size: 1.5rem;
    font-weight: 400;
  }

  .sect-hero :global(.btn-firm) {
    align-self: center;
    margin-inline: auto;
  }
</style>
